
<%= form_with url: flights_path, method: :get do |f| %>
<%= f.label :departing_airport, "From" %>
<%= f.select :departing_airport, options_for_select(@airport.map { |airport| airport.city }) %>
<br>
<%= f.label :arrival_airport, "To" %>
<%= f.select :arrival_airport, options_for_select(@airport.map {|airport| airport.city })%>
<br>
<%= f.label :date, "Date" %>
<%= f.select :date, options_for_select(@date.map { |f| [f.date.strftime("%b, %d, %y"), f.date.to_date] }) %>
<br>
<%= f.submit "find flights", class: "button is-primary is-outlined is-fullwidth" %>
<% end %>
<%= render "search" %>
